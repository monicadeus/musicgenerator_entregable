from flask import Flask, render_template, request, redirect, url_for
import os
from datetime import datetime
from werkzeug.utils import secure_filename

app = Flask(__name__)
app.config['UPLOAD_FOLDER'] = 'static/uploads/'
app.config['ALLOWED_EXTENSIONS'] = {'mid', 'midi'}

def allowed_file(filename):
    return '.' in filename and \
           filename.rsplit('.', 1)[1].lower() in app.config['ALLOWED_EXTENSIONS']

@app.route('/upload', methods=['POST'])
def upload_song():
    if 'song' not in request.files:
        return redirect(request.url)
    
    file = request.files['song']
    if file.filename == '':
        return redirect(request.url)
    
    if file and allowed_file(file.filename):
        filename = secure_filename(file.filename)
        filepath = os.path.join(app.config['UPLOAD_FOLDER'], filename)
        file.save(filepath)
        
        # integrar modelo de generacion musical
        generated_song = generate_new_song(filepath)
        
        return render_template('results.html',
                             original_file=filename,
                             generated_file=generated_song,
                             timestamp=datetime.now().strftime('%Y-%m-%d %H:%M:%S'))

def generate_new_song(input_path):
    # Integracion con tu modelo LSTM existente
    # Usa tus archivos .h5 y .keras
    return "nueva_cancion_generada.mid"

if __name__ == '__main__':
    if not os.path.exists(app.config['UPLOAD_FOLDER']):
        os.makedirs(app.config['UPLOAD_FOLDER'])
    app.run(debug=True)
