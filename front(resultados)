        <div class="actions">
            <a href="generated_song.mid" class="btn btn-primary" download>Descargar Archivo MIDI</a>
            <button onclick="generateAnother()" class="btn btn-secondary">Generar Otra Cancion</button>
            <button onclick="shareSong()" class="btn btn-secondary">Compartir Cancion</button>
        </div>
    </div>

    <script>
        function generateAnother() {
            window.location.href = 'index.html';
        }

        function shareSong() {
            if (navigator.share) {
                navigator.share({
                    title: 'Mi cancion generada',
                    text: 'Mira esta cancion que genere con AI',
                    url: window.location.href
                });
            } else {
                alert('Copia este enlace para compartir: ' + window.location.href);
            }
        }

        // Cargar informacion de la cancion
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const songName = urlParams.get('song') || 'cancion_generada.mid';
            document.getElementById('song-name').textContent = songName;
        });
    </script>
