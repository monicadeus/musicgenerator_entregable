from flask import Flask, request
import os

app = Flask(__name__)

# Carpeta para guardar archivos
UPLOAD_FOLDER = "uploads"
os.makedirs(UPLOAD_FOLDER, exist_ok=True)

@app.route('/', methods=['GET', 'POST'])
def subir_archivo():
    if request.method == 'POST':
        # Verificar si se envi√≥ un archivo
        archivo = request.files['archivo_audio']
        
        if archivo and archivo.filename != '':
            # Guardar el archivo
            archivo.save(os.path.join(UPLOAD_FOLDER, archivo.filename))
            return f'''
                <h1>Archivo subido correctamente!</h1>
                <p>Nombre: {archivo.filename}</p>
                <a href="/">Volver a subir</a>
            '''
    
    # HTML del formulario
    return '''
    <!DOCTYPE html>
    <html>
    <head>
        <title>Subir Audio</title>
        <style>
            body { 
                font-family: Arial; 
                text-align: center; 
                padding: 50px; 
                background: #f0f8ff;
            }
            form {
                background: white;
                padding: 30px;
                border-radius: 10px;
                display: inline-block;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
            }
            input, button {
                margin: 10px;
                padding: 10px;
            }
        </style>
    </head>
    <body>
        <h1>Subir Archivo de Audio</h1>
        <form method="POST" enctype="multipart/form-data">
            <input type="file" name="archivo_audio" accept=".mp3,.wav" required>
            <br>
            <button type="submit">Subir Archivo</button>
        </form>
    </body>
    </html>
    '''

if __name__ == '__main__':
    app.run(debug=True)
